{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "models/*": ["src/models/*"],
      "composition/*": ["src/composition/*"],
      "utils/*": ["src/utils/*"],
      "src/*": ["src/*"],
      "app/*": ["*"]
    },
    "experimentalDecorators": true,
  },
  "exclude": [
    "functions"
  ],
}
